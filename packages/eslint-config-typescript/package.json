{
  "name": "@lcooper/eslint-config-typescript",
  "version": "2.0.0",
  "description": "Shareable ESLint config for Typescript projects",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript"
  ],
  "exports": {
    ".": {
      "import": "./esm.js",
      "require": "./cjs.js",
      "default": "./base.js"
    },
    "./base": "./base.js",
    "./cjs": "./cjs.js",
    "./esm": "./esm.js",
    "./rules/*": "./rules/*.js",
    "./package.json": "./package.json"
  },
  "files": [
    "base.js",
    "cjs.js",
    "esm.js",
    "rules"
  ],
  "engines": {
    "node": "^18.18.0 || >=20.0.0"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint ."
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Lucian Cooper <cooperlucian@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luciancooper/eslint-configs.git",
    "directory": "packages/eslint-config-typescript"
  },
  "bugs": {
    "url": "https://github.com/luciancooper/eslint-configs/issues"
  },
  "homepage": "https://github.com/luciancooper/eslint-configs/tree/main/packages/eslint-config-typescript#readme",
  "dependencies": {
    "@lcooper/eslint-config": "^3.0.0",
    "@stylistic/eslint-plugin-ts": "^1.7.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "typescript-eslint": "^7.3.1"
  },
  "peerDependencies": {
    "eslint": ">=8.56",
    "typescript": ">=4.7.4"
  }
}
