{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "preversion": "yarn test",
    "version": "lerna version",
    "publish": "lerna publish from-git"
  },
  "engines": {
    "node": "^18.18.0 || ^20.9.0 || >=21.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luciancooper/eslint-configs.git"
  },
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "author": "Lucian Cooper <cooperlucian@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luciancooper/eslint-configs/issues"
  },
  "homepage": "https://github.com/luciancooper/eslint-configs#readme",
  "jest": {
    "projects": [
      "<rootDir>/packages/*"
    ]
  },
  "commitlint": {
    "extends": [
      "@lcooper"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@lcooper/commitlint-config": "^2.0.0",
    "chalk": "^4.1.1",
    "eslint": "^9.23.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.13",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  }
}
